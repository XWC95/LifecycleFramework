<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/image_covers"
            android:layout_width="70dp"
            android:layout_height="95dp"
            android:scaleType="fitXY"
            android:src="@mipmap/movie_covers" />


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/image_covers"
            app:layout_constraintLeft_toRightOf="@id/image_covers"
            app:layout_constraintTop_toTopOf="@id/image_covers">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="星球大战"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="观众评分8.4"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="导演： 莱恩·约翰逊"
                android:textColor="#82837E"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="主演： 黛西·雷德利"
                android:textColor="#82837E"
                android:textSize="12sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_buy_bg"
            android:gravity="center_horizontal"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="购买"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="新人专享"
            android:textColor="#82837E"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_buy"
            app:layout_constraintRight_toRightOf="@id/tv_buy"
            app:layout_constraintTop_toBottomOf="@id/tv_buy" />


        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/list_divider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_covers" />


    </android.support.constraint.ConstraintLayout>
</layout>